<div class="main posts-index">
  <div class="user-info">
    <a href="/users/mypage"><h2><%= current_user.name %></h2></a>
    <p>累計学習時間：5.5時間</p>
    <p>投稿：24件</p>
    <h3>タグ</h3>
    <% @all_tags.each do |tag| %>
      <% @tags = User.find_by(id: current_user.id).posts.tagged_with(tag) %>
      <% unless @tags.count === 0 then %>
        <a href="/tags/<%= tag.id %>"><%= tag.name %> (<%= @tags.count %>)</a><br>
      <% end %>
    <% end %>
    <%= link_to("ログアウト", destroy_user_session_path, method: :delete, class: "logout" ) %>
  </div>
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-info">
        <% post.tag_list.each do |tag| %>
          <% id = ActsAsTaggableOn::Tag.find_by(name: tag) %>
          <div class="tags">
            <%= link_to(tag,"/tags/#{id.id}") %>
          </div>
        <% end %>
        <div class="running-time">
          <p><%= post.running_time %> 分</p>
        </div>
      </div>
      <div class="posts-index-item">
        <%= simple_format(post.content) %>
        <nav class="post-submenus">
          <ul>
            <li><%= link_to("詳細を見る","/posts/#{post.id}") %></li>
            <li><%= link_to("投稿の編集", "/posts/#{post.id}/edit") %></li>
            <li><%= link_to("投稿の削除", "/posts/#{post.id}/destroy", {method: "post"}) %></li>
          </ul>
        </nav>
        <div class="post-submenus-btn">
          <i class="fas fa-angle-down"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>
